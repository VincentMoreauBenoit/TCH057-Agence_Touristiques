<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105sp"
    android:layout_margin="8dp"
    android:background="#88B8EB"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Image / icône dans l’item -->
    <ImageView
        android:id="@+id/imgHistorique"
        android:layout_width="92dp"
        android:layout_height="83dp"
        android:contentDescription="@string/historique_image"
        android:padding="0dp"
        android:src="@drawable/ic_placeholder" />

    <!-- Zone de texte (verticale) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/txtDestination"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Destination : "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMontant"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Montant : "
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDestination" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Date : "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMontant" />

        <TextView
            android:id="@+id/tvStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Statut : CONFIRMÉ"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
