<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/edittext_rounded_bg2">

    <!-- Image / icône dans l’item -->
    <ImageView
        android:id="@+id/imgHistorique"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_placeholder"
        android:contentDescription="@string/historique_image" />

    <!-- Zone de texte (verticale) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination : " />

        <TextView
            android:id="@+id/tvMontant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montant : " />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : " />

        <TextView
            android:id="@+id/tvStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut : CONFIRMÉ" />

    </LinearLayout>
</LinearLayout>
