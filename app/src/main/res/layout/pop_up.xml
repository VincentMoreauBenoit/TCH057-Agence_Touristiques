<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogReservation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_rounded_bg2"
    android:padding="16dp"
    tools:ignore="MissingConstraints">

    <!-- Titre : RÉSERVATION -->
<TextView
android:id="@+id/tvReservationTitre"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="RÉSERVATION"
android:textStyle="bold"
android:textSize="18sp"
android:layout_marginBottom="8dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"/>

    <!-- Nombre à réserver -->
<TextView
android:id="@+id/tvNombre"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Nombre à réserver :"
app:layout_constraintTop_toBottomOf="@+id/tvReservationTitre"
app:layout_constraintStart_toStartOf="parent"
android:layout_marginTop="16dp"/>

    <!-- Prix total -->
<TextView
android:id="@+id/tvPrixTotal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Prix total :"
app:layout_constraintTop_toBottomOf="@+id/tvNombre"
app:layout_constraintStart_toStartOf="parent"
android:layout_marginTop="16dp"/>

    <!-- Bouton CONFIRMER -->
    <Button
        android:id="@+id/btnConfirmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#6A76B5"
        android:text="CONFIRMER"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrixTotal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
