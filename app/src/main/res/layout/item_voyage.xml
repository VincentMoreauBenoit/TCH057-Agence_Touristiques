<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/edittext_rounded_bg2"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image / icône dans l’item -->
        <ImageView
            android:id="@+id/imgHistoriqueVoyage"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:contentDescription="@string/historique_image"
            android:src="@drawable/ic_placeholder" />

        <!-- Zone de texte (verticale) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textHistoriqueDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination : " />

            <TextView
                android:id="@+id/textHistoriqueMontant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Résumer : " />

            <TextView
                android:id="@+id/textHistoriqueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:text="Prix : " />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>