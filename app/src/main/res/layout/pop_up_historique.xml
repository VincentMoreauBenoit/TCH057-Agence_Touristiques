<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textPopUpPicker"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/edittext_rounded_white"
    android:padding="16dp"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/btnPopUpReservConfirmer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#417CBA"
        android:fontFamily="@font/inknut_antiqua_light"
        android:padding="0dp"
        android:text="@string/confirmer"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPopUpHistoDescription" />

    <Button
        android:id="@+id/btnPopUpHistoRetour"
        android:layout_width="120dp"
        android:layout_height="48.5dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#417CBA"
        android:fontFamily="@font/inknut_antiqua_light"
        android:padding="0dp"
        android:text="@string/retour"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPopUpHistoDescription"
        app:layout_constraintVertical_bias="0.545"
        tools:textSize="14sp" />

    <TextView
        android:id="@+id/textPopUpHistoDescription"
        android:layout_width="250dp"
        android:layout_height="104dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:gravity="center"
        android:maxLines="4"
        android:padding="8dp"
        android:text="@string/annulation_voyage"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPopUpReservConfirmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
