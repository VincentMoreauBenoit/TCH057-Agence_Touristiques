<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDestinationDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <!-- Image de la destination en haut -->
    <ImageView
        android:id="@+id/imgDestination"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenu défilable avec les informations et la description -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgDestination"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section Informations -->
            <TextView
                android:id="@+id/tvSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:paddingBottom="8dp"
                android:text="INFORMATIONS"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination : Paris"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDuree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée : 7 jours"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 01/05/2025"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPlaceDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places disponibles : 12"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix : 975 $"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Section Description -->
            <TextView
                android:id="@+id/tvDescriptionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:paddingBottom="8dp"
                android:text="DESCRIPTION"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description détaillée de la destination..."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Conteneur pour les deux boutons en bas -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bouton Retour -->
        <Button
            android:id="@+id/btnRetour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#6A76B5"
            android:fontFamily="@font/alike_angular"
            android:text="Retour"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Espacement entre les boutons -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Bouton Réserver maintenant -->
        <Button
            android:id="@+id/btnReserver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#6A76B5"
            android:fontFamily="@font/alike_angular"
            android:text="Réserver maintenant"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
