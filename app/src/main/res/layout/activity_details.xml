<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDestinationDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20sp"
    tools:context=".activite.DetailsActivity">

    <!-- Image de la destination en haut -->

    <!-- Contenu dÃ©filable avec les informations et la description -->

    <!-- Conteneur pour les deux boutons en bas -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="24dp">

        <!-- Section Informations -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageDestination"
                android:layout_width="374dp"
                android:layout_height="292dp"
                android:padding="0sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/edittext_rounded_bg2" />

            <Button
                android:id="@+id/btnRetour"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#BABABA"
                android:fontFamily="@font/inknut_antiqua_light"
                android:padding="0sp"
                android:text="@string/x"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="10sp"
                app:layout_constraintStart_toStartOf="@+id/imageDestination"
                app:layout_constraintTop_toTopOf="@+id/imageDestination" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/textDetailDestination"
                android:layout_width="352dp"
                android:layout_height="36dp"
                android:text="@string/destination"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:fontFamily="@font/inknut_antiqua_light" />

            <TextView
                android:id="@+id/textDetailDuree"
                android:layout_width="352dp"
                android:layout_height="36dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="@string/dur_e"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#7CA3CD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDetailDestination"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textDetailDescription"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inknut_antiqua_light"
            android:hint="@string/description"
            android:text="@string/la_france_pays_de_l_europe_occidentale_compte_des_villes_m_di_vales_des_villages_alpins_et_des_plages_paris_sa_capitale_est_c_l_bre_pour_ses_maisons_de_mode_ses_mus_es_d_art_classique_dont_celui_du_louvre_et_ses_monuments_comme_la_tour_eiffel"
            android:textAlignment="viewStart"
            android:textColor="#353535"
            android:textColorHint="#353535"
            android:textSize="12sp"
            tools:ignore="TextSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginBottom="30sp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="@string/dateText"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textPlaceDisponible"
                android:layout_width="209dp"
                android:layout_height="40dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="@string/places_disponibles_120"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextSizeCheck" />

            <Spinner
                android:id="@+id/spSejour"
                android:layout_width="353dp"
                android:layout_height="52dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/edittext_border"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <TextView
                android:id="@+id/tvPrix"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="@string/prix"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textDetailPrix"
                android:layout_width="95dp"
                android:layout_height="53dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="@string/_975"
                android:textColor="#26CC2C"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnReserver"
                android:layout_width="259dp"
                android:layout_height="75dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#1E7AED"
                android:fontFamily="@font/inknut_antiqua_light"
                android:padding="0sp"
                android:text="@string/r_server_maintenant"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:cornerRadius="15sp"
                app:layout_constraintStart_toEndOf="@+id/textDetailPrix"
                app:layout_constraintTop_toTopOf="parent"
                tools:textSize="18sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Section Description -->

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="351dp" />

</androidx.constraintlayout.widget.ConstraintLayout>